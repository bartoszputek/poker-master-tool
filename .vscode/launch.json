{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "tests/**/${fileBasenameNoExtension}.*"
      ],  
      "outputCapture": "std",
      "port": 9229,
    }
  ]
}